    <label for="service">Учебный курс</label>
    <select id="service" name="service">
      <option value="Мир в каждый дом">Мир в каждый дом</option>
      <option value="Кузя Лакомкин">Кузя Лакомкин</option>
      <option value="Тик ток гуру">Тик ток гуру</option>
      <option value="Релокант2022">Релокант2022</option>
    </select>
    <br>
    <label for="dayOfWeek">День недели</label>
